---
import Layout from './Layout.astro'
import '../styles/prose.css'

const { frontmatter } = Astro.props
const { title, date } = frontmatter
---

<Layout title={title}>
  <div slot="headline">
    <h1>{title}</h1>
    <p class="text-gray-500 font-serif dark:text-gray-300">{date}</p>
  </div>
  <slot />
</Layout>
