---
import { Icon } from 'astro-icon'
import Layout from '../layouts/Layout.astro'
import Avatar from '../components/Avatar.astro'
import { techLinks } from './data.json'

const stateItems = [
  { name: 'lovelliu.me', icon: 'pepicons:house' },
  { name: 'Front-End Engineer', icon: 'mdi:briefcase-account-outline' },
  { name: 'China', icon: 'uil:location-point' },
]
---

<Layout title="Lovell Liu">
  <div class="flex flex-col-reverse items-center md:flex-row" slot="headline">
    <div class="text-center md:w-3/5 md:text-left">
      <h1>Lovell Liu</h1>
      <p class="text-lg font-serif">
        The only true wisdom is in knowing you know nothing.
      </p>
      <div class="flex gap-4 justify-center md:justify-start">
        {
          stateItems.map(({ name, icon }) => (
              <div>
                <Icon name={icon} />
                {name}
              </div>
          ))
        }
      </div>
    </div>
    <Avatar />
  </div>
  <Fragment slot="content">
    <p>My tech satck and common tools:</p>
    <p>
      {
        techLinks.map(({ icon, link, title }) => (
          <a
            href={link}
            class="no-underline"
            target="_blank"
            rel="noopener noreferrer"
            title={title}
          >
            <Icon name={icon} />
          </a>
        ))
      }
    </p>
    <p>
      喜欢前端，喜欢一切
    </p>
  </Fragment>
</Layout>

<style>
  [astro-icon^="vscode-icons"] {
    @apply w-6 h-6 m-1.5;
  }
</style>
