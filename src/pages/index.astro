---
import { Icon } from 'astro-icon'
import Layout from '../layouts/Layout.astro'
import Avatar from '../components/Avatar.astro'
import { techLinks } from './data.json'

const stateItems = [
  { name: 'lovelliu.me', icon: 'pepicons:house' },
  { name: 'Front-End Engineer', icon: 'mdi:briefcase-account-outline' },
  { name: 'China', icon: 'uil:location-point' },
]

const socialItems = [
  { icon: 'ri:github-line', link: 'https://github.com/lovelliu' },
  { icon: 'ri:telegram-line', link: 'https://t.me/lovelliu_6' },
  { icon: 'ri:zhihu-fill', link: 'https://www.zhihu.com/people/ke-le-74-10-95' },
]
---

<Layout title="Lovell Liu">
  <div
    class="flex flex-col-reverse items-center md:flex-row w-full transition-all" slot="headline"
  >
    <div class="text-center md:w-3/5 md:text-left">
      <h1>Lovell Liu</h1>
      <p class="text-lg font-serif">
        The only true wisdom is in knowing you know nothing.
      </p>
      <p class="flex gap-4 justify-center md:justify-start">
        {
          stateItems.map(({ name, icon }) => (
              <span>
                <Icon name={icon} />
                {name}
              </span>
          ))
        }
      </p>
      <div>
        {
          socialItems.map(({ icon, link }) => (
            <a
              href={link}
              class="" target="_blank"
              rel="noopener noreferrer"
            >
              <Icon name={icon} />
            </a>
          ))
        }
      </div>
    </div>
    <Avatar />
  </div>
  <Fragment slot="content">
    <p>My tech satck and common tools:</p>
    <p>
      {
        techLinks.map(({ icon, link, title }) => (
          <a
            href={link}
            target="_blank"
            rel="noopener noreferrer"
            title={title}
          >
            <Icon name={icon} />
          </a>
        ))
      }
    </p>
  </Fragment>
</Layout>

<style>
  [astro-icon^="vscode-icons"] {
    @apply w-6 h-6 m-1.5;
  }

  [astro-icon^="ri"] {
    @apply mr-4 mb-0 text-gray-400 hover:text-gray-500 active:text-gray-600;
  }
</style>
